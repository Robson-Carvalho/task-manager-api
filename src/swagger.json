{
  "openapi": "3.0.1",
  "info": {
    "title": "API de cadastro e autentificação de usuários e manipulação de tarefas.",
    "description": "Essa API tem como objetivo a manipulação das tarefas criadas pelos usuários cadastrados e autentificados pela mesma.",
    "termsOfService": "http://localhost:3030/terms",
    "contact": {
      "email": "robsoncarvalho.tech@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3030", "description": "API de teste" }
  ],
  "paths": {
    "/task/create": {
      "post": {
        "summary": "Cadastro de tarefa",
        "description": "Essa rota será responsável por cadastrar uma nova tarefa",
        "tags": ["Tasks"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTask"
              },
              "examples": {
                "task": {
                  "value": {
                    "title": "Estudar Node.JS",
                    "content": "Estudar o que são módulos"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/task/read": {
      "get": {
        "summary": "Busca de tarefa",
        "description": "Essa rota é responsável por buscar tarefas pelo ID do usuário",
        "tags": ["Tasks"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {}
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReadTask"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "task/update": {
      "put": {
        "summary": "Atualizar tarefa",
        "description": "Essa rota é responsável por atualizar uma tarefa",
        "tags": ["Tasks"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTask"
              },
              "examples": {
                "task": {
                  "value": {
                    "taskID": 1,
                    "title": "Estudar Matemática",
                    "content": "Razão e proporção, Escala e Mediana",
                    "status": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "task/delete": {
      "delete": {
        "summary": "Apagar tarefa",
        "description": "Essa rota é responsável por apagar uma tarefa",
        "tags": ["Tasks"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteTask"
              },
              "examples": {
                "task": {
                  "value": {
                    "taskID": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "204": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTask": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" }
        }
      },
      "ReadTask": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "id_user": { "type": "number" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "status": { "type": "number" },
          "created_at": { "type": "string" }
        }
      },
      "UpdateTask": {
        "type": "object",
        "properties": {
          "taskID": { "type": "number" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "status": { "type": "boolean" }
        }
      },
      "DeleteTask": {
        "type": "object",
        "properties": {
          "taskID": { "type": "number" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
